@model ProjetoAulaBackEnd.Models.FaleConosco

@{
    ViewData["Title"] = "Fale Conosco";
}

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined" rel="stylesheet">
    <link rel="stylesheet" href="https://demo.haeckdesign.com/get-social-icon-set/style.css">
    
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Quicksand:wght@400;700&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="~/components/css/button.css"> 
    <link rel="stylesheet" href="~/css/fale_conosco2.css">
    <link rel="stylesheet" href="~/css/stylepage.css">
    <link rel="icon" type="icon/ico" href="~/img/favicon-32x32.png">

    <title>Fale Conosco | CarpeDiem</title>
</head>


<body class="bg-gray">
    
    <!-- topo -->
    <section class="bg-gray flex ai-center j-end px-3 md-flex-wrap md-flex-col">

        <!--<a href="index_logado.html"><img src="~/img/Logo_Final_382x148.png"></a>-->

        <div class="p-1 flex flex-col j-center ai-center ">
            <div class="relative w-1 h-1">
                <img src="~/img/usuario.jpg" class="rounded-full w-f">
                <div class="absolute bottom right bg-blue-1 rounded-full ">
                    <a asp-area="" asp-controller="Hospedes" asp-action="Details"><img width="30px" src="~/img/edit_note.png"></a>
                </div>
            </div>
            <!--<p>Ana Maria</p>-->
        </div>

    </section>

    <div>
        <!--<form class="w-f p-2" method="post">-->
        <legend class="w-full">
            <h1>Como podemos te ajudar?</h1>
            <h5 id="erro">@ViewBag.Message</h5>
        </legend>
    </div>

    <main class="">
        <form class="formFaleConosco" name="FaleConosco" method="post">
            <div class="j-center ai-center">
                <label class="w-full font-size-24 bold-6 t-black" for="nome">Nome Completo</label>
                <input style="width: 100%" class="w-f input w-f mb-4" type="text" id="nome" required>
                    
                <label class="font-size-24 bold-6 t-black" for="email">Email</label>
                <input style="width: 100%" class="input w-f mb-4" type="email" id="Email" required>
                    
                <label class="font-size-24 bold-6 t-black" for="message">Deixe aqui sua mensagem</label>
                <textarea style="width: 100%" class="input w-f mb-4" cols="100" rows="10" required></textarea>  

                <div class="flex t-center j-center py-2">
                    <input type="submit" value="ENVIAR" class="btn btn-blue btn-effect w-6p"/>                        
                </div>
            </div>
        </form>
    </main>

    <div class="copyright p-2 t-center"></div>

    <script src="~/js/copyright.js"></script>

</body>

</html>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}