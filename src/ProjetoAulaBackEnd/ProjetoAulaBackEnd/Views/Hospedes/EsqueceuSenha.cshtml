    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js" integrity="sha512-894YE6QWD5I59HgZOGReFYm4dnWc1Qt5NtvYSaNcOP+u1T9qYdvdihz0PPSiiqn/+/3e7Jo4EaG7TubfWGUrMQ==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.mask/1.14.16/jquery.mask.min.js" integrity="sha512-pHVGpX7F/27yZ0ISY+VVjyULApbDlD0/X0rgGbTqCE7WFW5MezNTWG/dnhtbBuICzsd0WQPgpE4REBLv+UqChw==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    -->

    <title>Esqueceu a Senha | CarpeDiem</title>
</head>

<body class="bg-gray">

    <div id="main" class="container-fluid">

        <!--<section class="bg-gray flex ai-center j-between px-3 md-flex-wrap md-flex-col">
            <a asp-area="" asp-controller="Home" asp-action="Index"><img src="~/img/Logo_Final_382x148.png"></a>    
            
            <div class="direct flex md-flex-col">
                <a href="fale_conosco2.html" class="p-1 m-1 t-black bold-7">Fale Conosco</a>
            </div>
        </section>-->

        <div class="grid grid-col-2 md-grid-col-1">

            <div id="" class="flex j-center ai-center">
                <img class="max-w-f pr-6" src="~/img/imagem-1.svg" alt="Cadastrar usuário">
            </div>

            <div id="login" class="w-full">
                
                <form class="p-3" name="login" method="post">

                    <legend>
                        <h1 class="t-center py-4 t-black"><b>Esqueceu sua Senha?</b></h1>
                        <h5 id="erro">@ViewBag.Message</h5>
                    </legend>

                    <fieldset>
                        
                        <span class="font-size-16"><b>Nome Completo</b></span>
                        <input style="width: 100%" class="input w-f mb-4" type="text" name="Nome" value="" required><br>
                        
                        <span class="font-size-16"><b>Email</b></span>
                        <input style="width: 100%" class="input w-f mb-4" type="email" name="E-mail" value="" required><br>
                        
                        
                        <div class="flex flex-col gap-2 py-6">                            
                            <button class="btn btn-blue btn-effect w-f">RECUPERAR SENHA</button>
                            <p class="possui_cadastro s-center">Ainda não tem Conta?<a asp-area="" asp-controller="Hospedes" asp-action="Create">Cadastre-se</a></p>
                        </div>

                    </fieldset>
                </form>
            </div>
        </div>
        
        <div class="copyright p-2 t-center"></div>
    </div>

    <script src="~/js/copyright.js"></script>
    
</body>

</html>

