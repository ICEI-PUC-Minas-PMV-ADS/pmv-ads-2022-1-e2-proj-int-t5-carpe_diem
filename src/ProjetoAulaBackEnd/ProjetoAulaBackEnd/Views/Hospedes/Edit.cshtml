@model ProjetoAulaBackEnd.Models.Hospede

@{
    ViewData["Title"] = "Edit";
}
<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined" rel="stylesheet">
    <link rel="stylesheet" href="https://demo.haeckdesign.com/get-social-icon-set/style.css">
    
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Quicksand:wght@400;700&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="~/components/css/button.css"> 
    <link rel="stylesheet" href="~/components/css/checkbox.css">
    <link rel="stylesheet" href="~/css/stylepage.css">
    <link rel="stylesheet" href="~/css/cadastro.css">

    <title>Editar Usuário | CarpeDiem</title>
</head>


<body class="bg-gray">
    
    <div id="main" class="container-fluid">
        
        <!--<div class="row">
            <div class="col-12" id="header">
                <a asp-area="" asp-controller="Home" asp-action="Index"><img src="~/img/Logo_Final_382x148.png"></a>
            </div>
        </div>-->

        <div class="grid grid-col-2 md-grid-col-1">
            <div id="" class="flex j-center ai-center">
                <img class="w-f pr-6" src="~/img/svg/undraw_editable_re_4l94.svg" alt="Cadastrar usuário">
            </div>

            <div id="cadastro" class="w-full">                         
                <form asp-action="Edit" class="formCadastro" name="Cadastro">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="IdHospede" />

                    <legend>
                        <h1><b class="t-black">Editar Cadastro</b></h1>                        
                    </legend>  
                    
                    <fieldset>
                        <h5 id="erro">@ViewBag.Message</h5>

                        <dl>
                            <dt class = "w-full">
                                @Html.DisplayNameFor(model => model.Nome)
                            </dt>
                            <dd class = "w-f input mb-4 mt-1" >
                                @Html.DisplayFor(model => model.Nome)
                            </dd>

                            <dt class = "w-full">
                                @Html.DisplayNameFor(model => model.CPF)
                            </dt>
                            <dd class = "w-f input mb-4 mt-1" >
                                @Html.DisplayFor(model => model.CPF)
                            </dd>

                            <dt class = "w-full">
                                @Html.DisplayNameFor(model => model.DataDeNascimento)
                            </dt>
                            <dd class = "w-f input mb-4 mt-1" >
                                @Html.DisplayFor(model => model.DataDeNascimento)
                            </dd>
                        </dl>
                         
                        <div class="form-group">
                            <label asp-for="Endereco" class="control-label font-size-16 bold-6">Endereço</label>
                            <span class="material-symbols-outlined t-blue-1 j-start ai-center">edit</span>
                            <input asp-for="Endereco" style="width: 100%" class="input w-f mb-4" />
                            <span asp-validation-for="Endereco" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Telefone" class="control-label font-size-16 bold-6">Telefone</label>
                            <span class="material-symbols-outlined t-blue-1 j-start ai-center">edit</span>
                            <input asp-for="Telefone" style="width: 100%" class="input w-f mb-4" />
                            <span asp-validation-for="Telefone" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Email" class="control-label font-size-16 bold-6">Email</label>
                            <span class="material-symbols-outlined t-blue-1 j-start ai-center">edit</span>
                            <input asp-for="Email" style="width: 100%" class="input w-f mb-4" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                         <div class="form-group">
                            <label asp-for="Senha" class="control-label font-size-16 bold-6">Senha</label>
                            <input type="password" asp-for="Senha" style="width: 100%" class="input w-f mb-4" />
                            <span asp-validation-for="Senha" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Senha2" class="control-label font-size-16 bold-6">Confirme a senha</label>
                            <input type="password" asp-for="Senha2" style="width: 100%" class="input w-f mb-4" />
                            <span asp-validation-for="Senha2" class="text-danger"></span>
                        </div>
                        <div>
                            <label asp-for="TipoUsuario" class="control-label font-size-16 bold-6">Quer cadastrar seu imóvel e se tornar um Anfitrião? Selecione a opção abaixo:</label>
                            <select asp-for="TipoUsuario" style="width: 100%" class="input w-f mb-4" asp-items="Html.GetEnumSelectList<TipoUsuario>()"></select>
                            <span asp-validation-for="TipoUsuario" class="text-danger"></span>
                        </div>
                        <br/>
                        <div class="form-group">
                           <button class="btn btn-blue btn-effect w-f">ATUALIZAR CADASTRO</button>
                        </div>
                    </fieldset>
                </form>         
            </div>
        <script>
            jQuery(function($){
            $("#campoCPF").mask("999.999.999-99");
            $("#campoData").mask("99/99/9999");
           });
        </script>
    </div>
    
    <div class="copyright p-2 t-center"></div>

    <script src="~/js/copyright.js"></script>
   
</body>

</html>          

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
                  


