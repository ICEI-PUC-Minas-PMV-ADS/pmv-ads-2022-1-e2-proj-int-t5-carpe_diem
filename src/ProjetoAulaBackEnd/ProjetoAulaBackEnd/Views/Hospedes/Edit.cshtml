    <!-- <link rel="stylesheet" href="css/perfil_hospede.css"> -->
    <link rel="icon" type="icon/ico" href="~/img/favicon-32x32.png">

    <title>Perfil do Hóspede | CarpeDiem</title>
</head>


<body class="bg-gray">
    
    <!-- topo -->
    <section class="bg-gray flex ai-center j-between px-3 md-flex-wrap md-flex-col">

        <a href="index_logado.html"><img src="~/img/Logo_Final_382x148.png"></a>
    
        <div class="direct flex md-flex-col">
            <a href="fale_conosco2.html" class="p-1 m-1 t-black bold-7">Fale conosco</a>
        </div>         
        
    </section>

    <div class="container m-auto flex j-center p-3">

        <!-- banner -->
        <section>

            <div class="p-1 flex j-between ai-center p-3">

                <div class="flex ai-center gap-3 flex-wrap">
                    <div class="relative w-2 h-2">
                        <img src="~/img/usuario.jpg" class="rounded-full w-f">
                        <div class="absolute bottom right bg-blue-1 rounded-full">
                            <a href="perfil_anfitriao.html"><img width="50px" src="~/img/edit_note.png"></a>
                        </div>    
                    </div>  
    
                    <div>
                        <p class="bold-7 t-black font-size-32">Ana Maria</p>
                        <p class="font-size-24">Sou Hóspede</p>
                    </div>

                </div>
                
                
                <div class="relative w-1 h-1 flex-center">
                    <a href="index_logado.html"><img src="~/img/svg/salvar.svg" width="64px"></a>
                </div>

            </div>            

            
            <div class="flex flex-wrap j-center ai-center gap-3 mt-1 bold-7 t-black font-size-7">
                Perfil do Hóspede
            </div>
              
            <!-- dados do hóspede -->
            <br>
            <br>

            <main>
                <form class="w-f p-2">
                    <div class="j-center ai-center">
                        <label class="w-full" for="nome"><b class="font-size-16">Nome Completo</b></label>
                        <input class="w-f input mb-3 mt-1" type="text" id="nome" class="input-padrao" style="height: 50px; width: 500px; border-radius: 32px;" required>
                            
                        <label class="w-full" for="email"><b class="font-size-16">Email</b></label>
                        <input class="w-f input mb-3 mt-1" type="email" id="Email" class="input-padrao" style="height: 50px; width: 500px; border-radius: 32px;" required>
                            
                        <label class="w-full" for="nome"><b class="font-size-16">Senha</b></label>
                        <input class="w-f input mb-3 mt-1" type="password" id="senha" class="input-padrao" style="height: 50px; width: 500px; border-radius: 32px;" required>

                        <label class="w-full" for="nome"><b class="font-size-16">Endereço</b></label>
                        <input class="w-f input mb-3 mt-1" type="text" id="endereco" class="input-padrao" style="height: 50px; width: 500px; border-radius: 32px;" required>

                        <label class="w-full" for="nome"><b class="font-size-16">Telefone</b></label>
                        <input class="w-f input mb-3 mt-1" type="tel" id="telefone" class="input-padrao" style="height: 50px; width: 500px; border-radius: 32px;" required>
                        

                        <div>                            
                            <label class="checkbox bold-7 t-black font-size-4"><input type="checkbox"><div class="checkbox-item"></div><span>Quero me tornar Anfitrião</span></label>
                        </div>

                    </div>
                </form>
            </main>

            <br>
            <br>

            <div class="flex flex-wrap j-start ai-center gap-3 mt-1 p-1 bold-7 t-black font-size-6">
                Minhas Reservas
            </div>

            <section>                
                <div class="grid gap-3 grid-col-4 md-grid-col-2 sm-grid-col-1" id="cards_places">
                    <div class="flex-1 shadow-1"> 
                        <img class="w-f h-2 object-cover" src="~/img/hotel-1.jpg"> 
                         
                        <p href="detalhes_imovel.html" class="bold-6 t-center p-1 t-black bg-blue-2">DETALHES</p>

                        <p href="editar_reserva.html" class="bold-6 t-center p-1 t-black bg-blue-2">EDITAR RESERVA</p>

                        <p href="editar_reserva.html" class="bold-6 t-center p-1 t-black bg-blue-2">CANCELAR RESERVA</p>
                    </div>                    
                </div>                
            </section>        
           
        <section class="w-f py-2 flex j-end">
            <a class="" href="index.html">
                <img src="~/img/svg/sair.svg" width="64px">
            </a>
        </section>
            
        <div class="copyright p-2 t-center"></div>
        
    <script src="javascript/script_perfil.js"></script>
    <script src="javascript/copyright.js"></script>

</body>
</html>
