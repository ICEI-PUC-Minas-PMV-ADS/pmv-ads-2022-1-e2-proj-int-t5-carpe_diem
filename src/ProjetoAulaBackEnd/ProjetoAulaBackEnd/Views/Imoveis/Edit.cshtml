                        <a href="editar_reserva.html"><p class="bold-6 t-black t-center p-1 bg-blue-2 m-3">EDITAR RESERVA</p></a>
                    </div>
                </div>
                <div class="flex gap-3 w-f hover:shadow-3 transition" id="card_places">
                    <div class="flex-1 shadow-1"> 
                        <a><img class="w-f h-2 object-cover" src="~/img/hotel-2.jpg"> </a>
                        <a href="editar_reserva.html"><p class="bold-6 t-black t-center p-1 bg-blue-2 m-3">EDITAR RESERVA</p></a>
                    </div>
                </div>
                <div class="flex gap-3 w-f hover:shadow-3 transition" id="card_places">
                    <div class="flex-1 shadow-1"> 
                        <a><img class="w-f h-2 object-cover" src="~/img/hotel-3.jpg"> </a>
                        <a href="editar_reserva.html"><p class="bold-6 t-black t-center p-1 bg-blue-2 m-3">EDITAR RESERVA</p></a>
                    </div>
                </div>
                <div class="flex gap-3 w-f hover:shadow-3 transition" id="card_places">
                    <div class="flex-1 shadow-1"> 
                        <a><img class="w-f h-2 object-cover" src="~/img/hotel-4.jpg"> </a>
                        <a href="editar_reserva.html"><p class="bold-6 t-black t-center p-1 bg-blue-2 m-3">EDITAR RESERVA</p></a>
                    </div>
                </div>
            </section> 
           
            <section class="w-f py-2 flex j-end">
                <a class="" href="index.html">
                    <img src="~/img/svg/sair.svg" width="64px">
                </a>
            </section>
            
            <div class="copyright p-2 t-center"></div>
        
        <script src="~/js/script_anfitriao.js"></script>
        <script src="~/js/copyright.js"></script>
    </div>
</body>
</html>


<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdImovel" />
            <div class="form-group">
                <label asp-for="Endereco" class="control-label"></label>
                <input asp-for="Endereco" class="form-control" />
                <span asp-validation-for="Endereco" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cidade" class="control-label"></label>
                <input asp-for="Cidade" class="form-control" />
                <span asp-validation-for="Cidade" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TipoEsp" class="control-label"></label>
                <select asp-for="TipoEsp" class="form-control"></select>
                <span asp-validation-for="TipoEsp" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TipoAc" class="control-label"></label>
                <select asp-for="TipoAc" class="form-control"></select>
                <span asp-validation-for="TipoAc" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="QtdeHospedes" class="control-label"></label>
                <input asp-for="QtdeHospedes" class="form-control" />
                <span asp-validation-for="QtdeHospedes" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Foto1" class="control-label"></label>
                <input asp-for="Foto1" class="form-control" />
                <span asp-validation-for="Foto1" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>


