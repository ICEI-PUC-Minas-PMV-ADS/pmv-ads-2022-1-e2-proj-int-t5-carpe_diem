                            <input type="hidden" asp-for="IdImovel" />                            
              
                    <div class="j-center ai-center">
                       <dl class="w-full">
                            <dt class = "w-full">
                                @Html.DisplayNameFor(model => model.Nome)
                            </dt>
                            <dd class="w-f input mb-3 mt-1" >
                                @Html.DisplayFor(model => model.Nome)
                            </dd>
                            <dt class = "w-full">
                                @Html.DisplayNameFor(model => model.CPF)
                            </dt>
                            <dd class = "w-f input mb-3 mt-1">
                                @Html.DisplayFor(model => model.CPF)
                            </dd>
                            <dt class = "w-full">
                                @Html.DisplayNameFor(model => model.DataDeNascimento)
                            </dt>
                            <dd class = "w-f input mb-3 mt-1">
                                @Html.DisplayFor(model => model.DataDeNascimento)
                            </dd>
                            <dt class = "w-full">
                                @Html.DisplayNameFor(model => model.Email)
                            </dt>
                            <dd class = "w-f input mb-3 mt-1">
                                @Html.DisplayFor(model => model.Email)
                            </dd>
                            <dt class = "w-full">
                                @Html.DisplayNameFor(model => model.Endereco)
                            </dt>
                            <dd class = "w-f input mb-3 mt-1">
                                @Html.DisplayFor(model => model.Endereco)
                            </dd>
                            <dt class = "w-full">
                                @Html.DisplayNameFor(model => model.Telefone)
                            </dt>
                            <dd class = "w-f input mb-3 mt-1">
                                @Html.DisplayFor(model => model.Telefone)
                            </dd>                            
                        </dl>
                    </div>                     
                 </form>
            </main>

