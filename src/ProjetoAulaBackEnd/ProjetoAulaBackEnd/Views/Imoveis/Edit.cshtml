            <!-- cards -->
            <section>                
                <div class="grid gap-3 grid-col-4 md-grid-col-2 sm-grid-col-1" id="cards_places"><div class="flex gap-3 w-f hover:shadow-3 transition" id="card_places">
                    <div class="flex-1 shadow-1"> 
